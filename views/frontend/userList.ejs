<!DOCTYPE html>
<html>
<head>
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

.button {
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  margin: 4px 2px;
  cursor: pointer;
  font-size: 10px;
}
.show-button{
    background-color:grey;
}

.edit-button {  background-color: blue; }
.delete-button {background-color:green}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
</head>
<body>

<h2>HTML Table</h2>

<table>
  <tr>
    <th>Full Name</th>
    <th>Age</th>
    <th>Email</th>
     <th>Action</th>
  </tr>
  <% for (let users of userData) { %>
  <tr>
    <td><%= users.full_name %></td>
    <td><%= users.age %></td>
    <td><%= users.email %></td>
    <td>
    <a href="/users/<%= users.id %>" class="button edit-button">View</a>
    <a href="/users/<%= users.id %>/delete" class="button delete-button">Delete</a>
    <a href="/users/<%= users.id %>/posts" class="button show-button">Post</a>

    </td>
  </tr>
  <% } %>
  
</table>

</body>
</html>

